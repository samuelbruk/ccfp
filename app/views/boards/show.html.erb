<span class="board-name">
  <%= link_to @board.name, edit_board_path(@board), class: "board-name" %>
  <%= link_to "Delete", board_path(@board), method: :delete, class: "board-delete-link" %>
  <!--TODO add a link to edit board name  -->
</span>
<!-- Using 'showw' instead of 'show', 'show' is reserved -->
<div class="show-boards">
  <% @lists.each do |list| %>
    <div class="list">
      <div class="list-name">
        <%= link_to list.name, list_path(list), class: "list-link"  %>
        <%= link_to "Delete", list_path(list), method: :delete, class: "list-delete-link"%>
      </div>
      <div class="cards">
        <% list.cards.each do |card| %>
          <div class="card">
            <%= link_to card.name, card_path(card), class: "card-link" %>
            <%= link_to "Delete", card_path(card), method: :delete, class: "card-delete-link" %>
          </div>
        <% end %>
        <div class="new-link-card">
          <%= link_to('Add Card', new_list_card_path(list, @card), remote: true, class: "new-link-card-#{list.id}") %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="new-link">
    <%= link_to('Add List', new_board_list_path(@board, @list), remote: true, class: "new-link") %>
  </div>
</div>
